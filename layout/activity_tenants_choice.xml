<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".tenants.TenantsChoice">

    <Toolbar
        android:id="@+id/toolbarEP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navyblue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Tenants Choice"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/toolbarEP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/chatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="19dp"
        android:background="@color/navyblue"
        android:drawableEnd="@drawable/ic_baseline_chat_bubble_outline_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:layout_width="416dp"
        android:layout_height="672dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarEP">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/HouseImageView"
                android:layout_width="360dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/rumah1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/price1"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="0dp"
                    android:layout_weight="5"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="RM"
                    android:textColorHint="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/priceTextView1"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:layout_weight="5"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="1000.00"
                    android:textColorHint="@color/black"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/address1"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Address:"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/AddressTextView1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="No 8, Jalan Kasawari 2B"
                    android:textColorHint="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cityTextView1"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="0dp"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Durian Tunggal"
                    android:textColorHint="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/stateTextView1"
                    android:layout_width="74dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="0dp"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Melaka"
                    android:textColorHint="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/posscodeTextView1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="75450"
                    android:textColorHint="@color/black"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/bt"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:drawableLeft="@drawable/ic_baseline_roofing_24"
                    android:fontFamily="@font/poppins_medium"
                    android:textColorHint="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/buildingTypeTV1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="1dp"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Landed"
                    android:textColorHint="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/room"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:drawableLeft="@drawable/ic_baseline_door_back_24"
                    android:fontFamily="@font/poppins_medium"
                    android:textColorHint="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/numOfRoomTextView1"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColorHint="@color/black"
                    android:hint="3 bedroom"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/toilet"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:drawableLeft="@drawable/ic_baseline_bathtub_24"
                    android:fontFamily="@font/poppins_medium"
                    android:textColorHint="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/numOfToiletsTextView1"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="2 bathroom"
                    android:textColorHint="@color/black"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date1"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Date Available:"
                    android:textColorHint="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/davTextView1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="25/06/2023"
                    android:textColorHint="@color/black"
                    android:textSize="18dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/status1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Status:"
                    android:textColorHint="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/statusTextView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Available"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="5dp"
                    android:textSize="18dp"
                    android:textColorHint="@color/black"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/poppins_medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/notes"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="0dp"
                    android:drawableLeft="@drawable/ic_baseline_note_24"
                    android:fontFamily="@font/poppins_medium"
                    android:textColorHint="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/notesTextView1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Note! Deposit for booking is RM100.00"
                    android:textColorHint="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tvNoted"
                    android:layout_width="365dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Note! Deposit for booking the house is RM100.00. Click next to proceed payment."
                    android:textColor="@color/black"
                    android:textSize="12dp" />


            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/BookingBtnHouse"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_button"
                android:fontFamily="@font/poppins_medium"
                android:text="Booking"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

         <!--   <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/contact"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_button"
                android:fontFamily="@font/poppins_medium"
                android:text="Chat with Owner"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" /> !-->

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>